<main class="p-4">
    <div class="row">
        <section>
            {{> title data="Car" big=true}}
            <div>
                <strong>{{make}} {{model}}</strong>
            </div>
            <div>
                Year: {{year}}
            </div>
            <div>
                Color:
                <span class="badge rounded-pill text-bg-secondary">{{color}}</span>
            </div>
        </section>

        <hr class="my-4">

        <section>
            {{> title data="Features"}}
            <ul class="mt-4">
                {{#with features}}
                <li>
                    <div class="mb-3">
                        <b>Interior:</b>
                    </div>
                    <div class="accordion accordion-flush" id="accordionFlushExample">
                        <div class="accordion-item mb-3" style="width: 300px;">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                    data-bs-target="#flush-collapseOne" aria-expanded="false"
                                    aria-controls="flush-collapseOne">
                                    Seats:
                                </button>
                            </h2>
                            <div id="flush-collapseOne" class="accordion-collapse collapse"
                                data-bs-parent="#accordionFlushExample">
                                <div class="accordion-body">
                                    <ul>
                                        {{#with interior.seats}}
                                        <li class="pb-3">Material: {{material}}</li>
                                        <li class="pb-3">Color: {{color}}</li>
                                        <li class="pb-3">
                                            Heated:
                                            {{> functions data=heated}}
                                        </li>
                                        <li>
                                            Ventilated:
                                            {{> functions data=ventilated}}
                                        </li>
                                        {{/with}}
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <div class="accordion-item mb-3" style="width: 300px;">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                    data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                    Dashboard:
                                </button>
                            </h2>
                            <div id="collapseTwo" class="accordion-collapse collapse"
                                data-bs-parent="#accordionExample">
                                <div class="accordion-body">
                                    <ul>
                                        {{#with interior.dashboard}}
                                        <li class="pb-3">Material: {{material}}</li>
                                        <li class="pb-3">Color: {{color}}</li>
                                        <li class="pb-3">
                                            Display:
                                            <ul class="mt-3">
                                                {{#with display}}
                                                <li>
                                                    Type: {{type}}
                                                </li>
                                                <li>
                                                    Size: {{size}}
                                                </li>
                                                <li>
                                                    Resolution: {{resolution}}
                                                </li>
                                                <li>
                                                    Touchscreen:
                                                    {{> functions data=touchscreen}}
                                                </li>
                                                {{/with}}
                                            </ul>
                                        </li>
                                        {{/with}}
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <div class="accordion-item" style="width: 300px;">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                    data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                                    Audio:
                                </button>
                            </h2>
                            <div id="collapseThree" class="accordion-collapse collapse"
                                data-bs-parent="#accordionExample">
                                <div class="accordion-body">
                                    <ul>
                                        {{#with interior.audio}}
                                        <li class="pb-3">
                                            System: {{system}}
                                        </li>
                                        <li class="pb-3">
                                            Speakers: {{speakers}}
                                        </li>
                                        <li class="pb-3">
                                            Subwoofer:
                                            {{> functions data=subwoofer}}
                                        </li>
                                        <li class="pb-3">
                                            Bluetooth:
                                            {{> functions data=bluetooth}}
                                        </li>
                                        <li class="pb-3">
                                            USB:
                                            {{> functions data=USB}}
                                        </li>
                                        {{/with}}
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </li>

                <li class="py-3">
                    <div class="mb-3">
                        <b>Exterior:</b>
                    </div>
                    <div class="mb-3">
                        <button type="button" class="btn btn-warning">Wheels:</button>
                    </div>
                    <ul>
                        {{#with exterior.wheels}}
                        <li class="pb-3">Size: {{size}}</li>
                        <li class="pb-3">Type: {{type}}</li>
                        <li class="pb-3">Color: {{color}}</li>
                        {{/with}}
                    </ul>

                    <div class="my-3">
                        <button type="button" class="btn btn-info">Headlights:</button>
                    </div>

                    <ul>
                        {{#with exterior.headlights}}
                        <li class="pb-3">Type: {{type}}</li>
                        <li class="pb-3">Brightness: {{brightness}}</li>
                        <li class="pb-3">
                            Automatic:
                            {{> functions data=automatic}}
                        </li>
                        {{/with}}
                    </ul>

                    <div class="my-3">
                        <button type="button" class="btn btn-success">Sunroof:</button>
                    </div>

                    <ul>
                        {{#with exterior.sunroof}}
                        <li class="pb-3">Type: {{type}}</li>
                        <li class="pb-3">Size: {{size}}</li>
                        <li class="pb-3">
                            Automatic:
                            {{> functions data=automatic}}
                        </li>
                        {{/with}}
                    </ul>
                </li>

                <li>
                    <div class="mb-3">
                        <b>Safety:</b>
                    </div>
                    <div class="mb-3">Airbags:</div>
                    <ul class="list-group list-group-horizontal" style="width: 500px;">
                        {{#with safety.airbags}}
                        <li class="list-group-item">Front: {{front}}</li>
                        <li class="list-group-item">Side: {{side}}</li>
                        <li class="list-group-item">Knee: {{knee}}</li>
                        <li class="list-group-item">Rear: {{rear}}</li>
                        {{/with}}
                    </ul>

                    <div class="mt-4 mb-3">Assistance:</div>
                    <ol class="list-group list-group-numbered" style="width: 330px;">
                        {{#with safety.assistance}}
                        <li class="list-group-item">
                            Blind spot monitoring:
                            {{> functions data=blind_spot_monitoring}}
                        </li>
                        <li class="list-group-item">
                            Rear cross traffic alert:
                            {{> functions data=rear_cross_traffic_alert}}
                        </li>
                        <li class="list-group-item">
                            Lane departure warning:
                            {{> functions data=lane_departure_warning}}
                        </li>
                        <li class="list-group-item">
                            Adaptive cruise control:
                            {{> functions data=adaptive_cruise_control}}
                        </li>
                        <li class="list-group-item">
                            Collision warning:
                            {{> functions data=collision_warning}}
                        </li>
                        {{/with}}
                    </ol>
                </li>
            </ul>
            {{/with}}
        </section>

        <hr class="my-4">

        <section>
            {{> title data="Engine"}}
            <div class="mt-4">
                <ul>
                    {{#with engine}}
                    <li class="pb-3">
                        Type:
                        <span class="badge rounded-pill text-bg-warning">{{type}}</span>
                    </li>
                    <li class="pb-3">
                        Displacement: {{displacement}}
                    </li>
                    <li class="pb-3">
                        Horsepower: {{horsepower}}
                    </li>
                    <li class="pb-3">
                        Torque: {{torque}}
                    </li>
                    <li>
                        <div class="mb-2">Transmission:</div>
                        <ul>
                            {{#with transmission}}
                            <li class="pb-2">
                                <span class="badge rounded-pill text-bg-info">{{type}}</span>
                            </li>
                            <li>
                                {{gears}} gears
                            </li>
                            {{/with}}
                        </ul>
                    </li>
                    {{/with}}
                </ul>
            </div>
        </section>

        <hr class="my-4">

        <section>
            {{> title data="Fuel economy"}}
            <ul class="list-group list-group-horizontal">
                <li class="list-group-item" style="width: 100px;">City</li>
                <li class="list-group-item" style="width: 100px;">Highway</li>
                <li class="list-group-item" style="width: 100px;">Combined</li>
            </ul>
            <ul class="list-group list-group-horizontal-sm">
                {{#with fuel_economy}}
                <li class="list-group-item" style="width: 100px;">{{city}} litres</li>
                <li class="list-group-item" style="width: 100px;">{{highway}} litres</li>
                <li class="list-group-item" style="width: 100px;">{{combined}} litres</li>
                {{/with}}
            </ul>
        </section>

        <hr class="my-4">

        <section>
            {{> title data="Price"}}
            <ul>
                {{#with price}}
                <li class="pb-3">Base: ${{base}}</li>
                <li class="pb-3">Destination: ${{destination}}</li>
                <li class="pb-3">
                    <div class="mb-2">Options:</div>
                    <ol>
                        {{#with options}}
                        <li class="pb-3">Navigation: ${{navigation}}</li>
                        <li class="pb-3">Moonroof: ${{moonroof}}</li>
                        <li>Premium paint: ${{premium_paint}}</li>
                        {{/with}}
                    </ol>
                </li>
                <li>
                    <p>
                        <button class="btn btn-primary" type="button" data-bs-toggle="collapse"
                            data-bs-target="#collapseWidthExample" aria-expanded="false"
                            aria-controls="collapseWidthExample">
                            Total price
                        </button>
                    </p>
                    <div style="min-height: 120px;">
                        <div class="collapse collapse-horizontal" id="collapseWidthExample">
                            <div class="card card-body" style="width: 150px;">
                                <h4 class="text-center m-2">${{total}}</h4>
                            </div>
                        </div>
                    </div>
                </li>
                {{/with}}
            </ul>
        </section>
    </div>
</main>