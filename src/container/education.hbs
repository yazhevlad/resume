<div>
    {{#with main}}
    <main>
        <section class="mb-5">
            {{> title data="My education" big=true}}
            <ul class="ps-5">
                {{#each educations}}
                <li>
                    {{name}}
                    {{#unless isEnd includeZero=true}}
                    - (ще в процесі)
                    {{/unless}}
                </li>
                {{/each}}
            </ul>
        </section>

        <section>
            {{> title data="My certificates"}}
            <ul class="ps-5">
                {{#each certificates}}
                <li>
                    {{name}} (ID: {{id}})
                </li>
                {{/each}}
            </ul>
        </section>
    </main>
    {{/with}}
</div>