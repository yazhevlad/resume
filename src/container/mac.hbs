<main class="p-4">
    <div class="row">
        <section>
            {{> title data=name big=true}}
            <div>
                <p>
                    <em>{{description}}</em>
                </p>
            </div>
            <div class="mb-3">
                Price: ${{price}}
            </div>
            <div class="small">
                Category: {{category}}
            </div>
        </section>

        <hr class="my-4">

        <section>
            {{> title data="Features"}}
            {{#with features}}
            <ul class="mt-4">
                {{#with processor}}
                <li class="pb-3">
                    <div class="card text-bg-info mb-3" style="max-width: 20rem;">
                        <div class="card-header">
                            <b>Processor</b>
                        </div>
                        <div class="card-body">
                            <div class="card-text">
                                <ul>
                                    <li>{{brand}} {{model}}</li>
                                    <li>{{speed}}</li>
                                    <li>{{cores}} cores</li>
                                    <li>{{cache}} cache</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </li>
                {{/with}}

                <li class="pb-3">
                    <div class="card text-bg-dark mb-3" style="max-width: 20rem;">
                        <div class="card-header">
                            <b>Memory & Storage</b>
                        </div>
                        <div class="card-body">
                            <b class="card-title">Memory:</b>
                            <div class="card-text mb-3">
                                <ul>
                                    {{#with memory}}
                                    <li>{{type}}</li>
                                    <li>{{size}}</li>
                                    <li>{{speed}}</li>
                                    {{/with}}
                                </ul>
                            </div>
                            <b class="card-title">Storage:</b>
                            <div class="card-text">
                                <ul>
                                    {{#with storage}}
                                    <li>{{type}}</li>
                                    <li>{{size}}</li>
                                    {{/with}}
                                </ul>
                            </div>
                        </div>
                    </div>
                </li>

                {{#with display}}
                <li class="pb-3">
                    <div class="card text-bg-success mb-3" style="max-width: 20rem;">
                        <div class="card-header">
                            <b>Display</b>
                        </div>
                        <div class="card-body">
                            <div class="card-text">
                                <ul>
                                    <li>{{size}}</li>
                                    <li>{{resolution}}</li>
                                    <li>{{technology}} technology</li>
                                    <li>{{color_space}} color space</li>
                                    <li> brightness {{brightness}}</li>
                                    <li>{{refresh_rate}}</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </li>
                {{/with}}

                {{#with graphics}}
                <li class="pb-3">
                    <div class="card text-bg-warning mb-3" style="max-width: 20rem;">
                        <div class="card-header">
                            <b>Graphics</b>
                        </div>
                        <div class="card-body">
                            <div class="card-text">
                                <ul>
                                    <li>{{brand}} {{model}}</li>
                                    <li>{{memory}}</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </li>
                {{/with}}

                <li class="pb-3">
                    {{> ports}}
                </li>

                {{#with battery}}
                <li class="pb-3">
                    <div class="card text-bg-danger mb-3" style="max-width: 20rem;">
                        <div class="card-header">
                            <b>Battery</b>
                        </div>
                        <div class="card-body">
                            <div class="card-text">
                                <ul>
                                    <li>{{type}}</li>
                                    <li>capacity {{capacity}}</li>
                                    <li>{{life}} without charging</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </li>
                {{/with}}

                <li class="pb-3">
                    <div class="card text-bg-primary mb-3" style="max-width: 20rem;">
                        <div class="card-header">
                            <b>Weight & Dimensions</b>
                        </div>
                        <div class="card-body">
                            <b class="card-title">Weight:</b>
                            <div class="card-text mb-3">
                                <ul>
                                    <li>{{weight}}</li>
                                </ul>
                            </div>
                            <b class="card-title">Dimensions:</b>
                            <div class="card-text">
                                <ul>
                                    {{#with dimensions}}
                                    <li>Height: {{height}}</li>
                                    <li>Width: {{width}}</li>
                                    <li>Depth: {{depth}}</li>
                                    {{/with}}
                                </ul>
                            </div>
                        </div>
                    </div>
                </li>

                <li>
                    <div class="card text-bg-light mb-3" style="max-width: 20rem;">
                        <div class="card-header">
                            <b>Operating system</b>
                        </div>
                        <div class="card-body">
                            <div class="card-text">
                                <ul>
                                    <li>{{operating_system}}</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </li>
            </ul>
            {{/with}}
        </section>

        <hr class="my-5">

        <section>
            {{> title data="Accessories"}}
            <ul class="list-group list-group-flush mt-3">
                {{#each features.accessories}}
                <li class="list-group-item pb-3">
                    {{name}} -
                    <b>${{price}}</b> -
                    <button type="button" class="btn btn-success">Buy</button>
                </li>
                {{/each}}
            </ul>
        </section>
    </div>
</main>