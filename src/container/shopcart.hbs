<main class="p-4">
    <div class="row">
        {{> headlink}}

        <section>
            {{#with header}}
            <div class="my-5">
                <h2 class="pb-2">{{title}}</h2>
                <a class="btn btn-outline-secondary" href="{{button.link}}">{{button.text}}</a>
            </div>
            {{/with}}

            <div class="my-5">
                <hr>
            </div>

            {{> cartGoodsItem data=goodsBlock}}

            <div class="my-5">
                <hr>
            </div>

            <div>
                {{#with total}}
                <h4 class="mb-3">{{title}}</h4>
                <h2>{{amount}}</h2>
                <div class="small mb-4">{{delivery}}</div>
                {{#each buttons}}
                {{#if isSuccess}}
                <div class="my-3">
                    <a class="btn btn-success" href="{{link}}">{{text}}</a>
                </div>
                {{else}}
                {{#if isOutline}}
                <div>
                    <a class="btn btn-outline-success" href="{{link}}">{{text}}</a>
                </div>
                {{/if}}
                {{/if}}
                {{/each}}
                {{/with}}
            </div>

            <div class="my-5">
                <hr>
            </div>

            {{#with goodsOtherBlock}}
            <h3 class="text-center mb-3">{{title}}</h3>
            <div class="row">
                <div class="col-12">
                    <div class="row">
                        {{#each cards}}
                        <div class="col-4 px-2 my-2">
                            <div class="card">
                                <img src="{{image}}" class="card-img-top" alt="{{title}}">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        {{title}}
                                        {{#if isHot}}
                                        <span class="badge rounded-pill text-bg-warning text-white">HOT!</span>
                                        {{else}}
                                        {{/if}}

                                        {{#if isNew}}
                                        <span class="badge rounded-pill text-bg-primary">Нове</span>
                                        {{else}}
                                        {{/if}}
                                    </h5>
                                    <p class="card-text small">{{description}}</p>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>
            {{/with}}

            <div class="my-5">
                <hr>
            </div>

            {{> sub data=subscribe}}

            <hr class="mt-5 mb-3">
            {{> footlink}}
        </section>
    </div>
</main>