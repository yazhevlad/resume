<main class="p-4">
    <div class="row">
        {{> headlink}}

        <section>
            <div class="my-5">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        {{#each breadcrumb}}
                        {{#if url}}
                        <li class="breadcrumb-item"><a href="{{url}}">{{name}}</a></li>
                        {{else}}
                        <li class="breadcrumb-item"><a>{{name}}</a></li>
                        {{/if}}
                        {{/each}}
                    </ol>
                </nav>
            </div>

            <div class="mb-5">
                <h2 class="mb-4">{{header}}</h2>
                <div class="row">
                    {{#each sortBlock}}
                    <div class="col-3 pe-1">
                        <select class="form-select">
                            <option selected>{{placeholder}}</option>
                            {{#each options}}
                            <option value="{{value}}">{{text}}</option>
                            {{/each}}
                        </select>
                    </div>
                    {{/each}}
                </div>
            </div>
        </section>

        <section class="col-4">
            {{#with filterBlock}}
            <div class="card">
                <div class="mx-2 my-1">
                    <ul class="list-group list-group-flush">
                        {{#with sellers}}
                        <li class="list-group-item mb-2">
                            <div class="mb-3">{{title}}</div>
                            <div class="mb-2">
                                {{#each list}}
                                <div class="form-check mb-2">
                                    <label class="form-check-label">{{value}}</label>
                                    <input type="checkbox" class="form-check-input">
                                </div>
                                {{/each}}
                            </div>
                        </li>
                        {{/with}}

                        {{#with brands}}
                        <li class="list-group-item">
                            <div class="mb-3">{{title}}</div>
                            <div>
                                <input class="form-control" placeholder="{{input.placeholder}}">
                            </div>
                            <div class="mt-3 mb-2">
                                {{#each options}}
                                <div class="form-check mb-2">
                                    <label class="form-check-label">{{value}}</label>
                                    <input type="checkbox" class="form-check-input">
                                </div>
                                {{/each}}
                            </div>
                        </li>
                        {{/with}}

                        {{#with price}}
                        <li class="list-group-item">
                            <div class="mt-2 mb-3">{{title}}</div>
                            <div>
                                <input class="form-control" placeholder="{{range.from}}">
                            </div>
                            <div class="mt-3">
                                <input class="form-control" placeholder="{{range.to}}">
                            </div>
                            <div class="my-3">
                                <a class="btn btn-outline-secondary" href="{{button.link}}">{{button.text}}</a>
                            </div>
                        </li>
                        {{/with}}

                        {{#each filterList}}
                        <li class="list-group-item">
                            <div class="mt-2 mb-3">{{title}}</div>
                            <div class="mt-3 mb-2">
                                {{#each options}}
                                <div class="form-check mb-3">
                                    <label class="form-check-label">{{value}}</label>
                                    <input type="checkbox" class="form-check-input">
                                </div>
                                {{/each}}
                            </div>
                        </li>
                        {{/each}}
                    </ul>
                </div>
            </div>
            {{/with}}
        </section>

        <section class="col-8">
            <div class="row">
                {{> catalogItem data=goodsList}}
            </div>
        </section>

        <section class="mt-5 px-1">
            {{#with service}}
            <div class="card text-bg-success text-center my-3">
                <div class="card-body">
                    <h2 class="card-title mb-3">{{title}}</h2>
                    <p class="card-text mb-4">{{description}}</p>
                    {{#each buttons}}
                    <div>
                        <a class="btn btn-primary" href="{{link}}">{{text}}</a>
                    </div>
                    {{/each}}
                </div>
            </div>
            {{/with}}
        </section>

        {{> footlink}}
    </div>
</main>