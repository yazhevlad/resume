<main class="p-4">
    <div class="row">
        {{> headlink}}

        {{#with formBlock}}
        <section class="col-8">
            <div class="row">
                <h1 class="mt-5 mb-3">{{header}}</h1>
                <div class="small">
                    {{rating.title}}: {{rating.value}}
                </div>

                {{#with actionBlock}}
                <div class="my-4">

                    <ul class="nav nav-tabs">
                        {{#each tabs}}
                        {{#if isActive}}
                        <a class="col-4 nav-link active text-center">{{text}}</a>
                        {{else}}
                        <a class="col-4 nav-link text-center">{{text}}</a>
                        {{/if}}
                        {{/each}}
                    </ul>
                </div>

                <div class="my-4 px-1">
                    <hr>
                </div>

                <div class="card my-4">
                    {{#with report}}
                    <div class="my-3 ms-2">
                        <div class="small pb-2">{{title}}</div>
                        <a class="btn btn-secondary" href="{{button.link}}">{{button.text}}</a>
                    </div>
                    {{/with}}
                </div>
                {{/with}}

                <div class="my-4 px-1">
                    <hr>
                </div>

                {{#with feedbackBlock}}
                <div class="my-4">
                    <h2 class="mb-5">{{title}}</h2>
                    <div>
                        {{#each buttons}}
                        {{#if isWarning includeZero=true}}
                        <a class="btn btn-warning text-white me-2" href="{{link}}">{{text}}</a>
                        {{else}}
                        {{#if isSuccess includeZero=true}}
                        <a class="btn btn-success me-2" href="{{link}}">{{text}}</a>
                        {{else}}
                        {{#if isDanger includeZero=true}}
                        <a class="btn btn-danger me-2" href="{{link}}">{{text}}</a>
                        {{/if}}
                        {{/if}}
                        {{/if}}
                        {{/each}}
                    </div>
                </div>
                {{/with}}
            </div>
        </section>

        <section class="col-4">
            {{#with goodsInfo}}
            <div class="card mt-5">
                <div class="my-3 ms-3">
                    <img src="{{photo}}" class="img-fluid rounded-start col-6" alt="{{name}}">
                    <div class="mt-3">{{name}}</div>
                </div>
            </div>

            <div class="card mt-3">
                <div class="my-3 ms-3">
                    <h5>{{price}}</h5>
                    {{#if inMarket includeZero=true}}
                    <div class="small">Є в наявності</div>
                    {{else}}
                    <div class="small">Немає в наявності</div>
                    {{/if}}

                    {{#each buttons}}
                    <div class="mt-3">
                        {{#if isPrimary includeZero=true}}
                        <a class="btn btn-primary" href="{{link}}">{{text}}</a>
                        {{else}}
                        {{#if isSecondary includeZero=true}}
                        <a class="btn btn-secondary" href="{{link}}">{{text}}</a>
                        {{/if}}
                        {{/if}}
                    </div>
                    {{/each}}
                </div>
            </div>

            <div class="card mt-3">
                <div class="p-3">
                    {{seller.title}}: <b>{{seller.value}}</b>
                </div>
            </div>
            {{/with}}
        </section>
        {{/with}}

        <div class="mt-4 px-1">
            <hr>
        </div>

        <section>
            {{> reviewItem data=reviewList}}
        </section>

        <section>
            {{#with service}}
            <div class="card text-bg-success text-center my-3">
                <div class="card-body">
                    <h2 class="card-title mb-3">{{title}}</h2>
                    <p class="card-text mb-4">{{description}}</p>
                    {{#each buttons}}
                    <div>
                        <a class="btn btn-primary" href="{{link}}">{{text}}</a>
                    </div>
                    {{/each}}
                </div>
            </div>
            {{/with}}
        </section>

        {{> footlink}}
    </div>
</main>