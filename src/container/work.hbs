{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div class="p-4">
    {{#with main}}
    <main>
        <section>
            {{> title data="Work history" big=true}}
            <div>
                <ul>
                    {{#each works}}
                    <li>
                        <div class="mb-3">{{position}}</div>

                        <div class="mb-3">
                            {{duration.from}} -
                            {{#if duration.to}}
                            {{duration.to}}
                            {{else}}
                            (досі працюємо)
                            {{/if}}
                        </div>

                        <div class="mb-4">
                            {{#if company.url}}
                            {{> link text=company.name href=company.url blank=true noLine=true}}
                            {{else}}
                            <b>{{company.name}}</b>
                            {{/if}}
                        </div>

                        <div class="mb-3">
                            <strong>Projects: {{projectAmount}}</strong>
                        </div>

                        <ul>
                            {{#each projects}}
                            <li>
                                <div class="mb-3">
                                    {{> link text=name href=url blank=true noLine=true}}
                                </div>

                                <div class="mb-4">
                                    <p>{{about}}</p>
                                </div>

                                <div class="mb-3">
                                    <em>Project stacks ({{stackAmount}}):</em>
                                </div>

                                <div class="mb-4">
                                    <ul>
                                        {{#each stacks}}
                                        <li>{{name}}</li>
                                        {{/each}}
                                    </ul>
                                </div>

                                <div class="mb-3">
                                    <em>Project awards ({{awardAmount}}):</em>
                                </div>

                                <div>
                                    <ul>
                                        {{#each awards}}
                                        <li>{{name}}</li>
                                        {{/each}}
                                    </ul>
                                </div>
                            </li>
                            {{/each}}
                        </ul>
                    </li>
                    {{/each}}
                </ul>
            </div>
        </section>
    </main>
    {{/with}}
</div>

